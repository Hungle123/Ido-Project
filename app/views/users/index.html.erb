<% provide(:title, 'Users') %>
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <% @users.each do |user|%>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email%></td>
      <td><%=   link_to 'show', user %> | <%=   link_to 'edit', edit_user_path(user)%> | <%=   link_to 'destroy', user, method: :delete, data: {confirm: "Are you sure?"}%>
      </td>
    </tr>
    <%end%>
</table>

<br>
<%= link_to 'New User',  new_user_path %>