<% provide(:title, 'User Details') %>
<h1>User details</h1>
<div class="row">
  <div class="col-md-8">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  </div>
  <div class="col-md-4">
    <%= image_tag "#{@user.avatar}", class: "avatar_image", alt: "avatar image"%>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
